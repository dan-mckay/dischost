extends layout

block content
  div#signupform
    h1 Sign up for Dischost
    form(action="/newuser", method="POST")
      label(for="username") Username:
      input#username(type="text", name="username")
      br
      label(for="email") Email:
      input#email(type="email", name="email")
      br
      label(for="countries") Country:
      select#countries(name="countries", value="Please Select...")
        each country in countryList
          option(value="#{country}") #{country}
      br
      label(for="password") Password:
      input#password(type="password", name="password")
      br
      label#confirm(for="confirm") Confirm:
      input(type="password", name="confirm")
      br
      button(class="submitbtn", role="button") Create Account
      br
      